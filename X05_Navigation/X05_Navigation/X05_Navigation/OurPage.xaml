<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="X05_Navigation.OurPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Move to a dufferent Page: "/>
            <Button Text="New Page" x:Name="btnNew"/>
            <Button Text="New Modal Page" x:Name="btnNewModal"/>
            <Button Text="Close this page" x:Name="btnClose"/>
            <Button Text="Close this modal page" x:Name="btnCloseModal"/>
            <Button Text="Go to root/start page" x:Name="btnGoToRoot"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>